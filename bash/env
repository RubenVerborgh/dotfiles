######## PATHS ########

# my bin path
export PATH=$BIN:$PATH

# my tools
export PATH=~/Library/Tools:$PATH

# custom paths
if [ -f ~/.paths ]; then
  source ~/.paths
fi

####### PROGRAMS #######

# editor
export EDITOR=$BIN/vim

# ignore duplicates, ls, ll, and commands starting with spaces
export HISTIGNORE="&:l[sl]:[ \t]*"
