export GIT_PS1_SHOWDIRTYSTATE=true
export GIT_PS1_SHOWSTASHSTATE=1
export GIT_PS1_SHOWUNTRACKEDFILES=1

alias gitgc='du -hs ./$(git rev-parse --show-cdup).git;git gc --aggressive --prune=now;du -hs ./$(git rev-parse --show-cdup).git'
alias gitpush='gitgc;git push'
alias gitroot='cd $(git rev-parse --show-cdup)'

. $dotfiles/config/programs/git_prompt
